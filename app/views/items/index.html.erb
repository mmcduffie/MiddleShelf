<h1>Listing items</h1>

<table>
  <tr>
    <th>UPC</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Selling Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.UPC %></td>
    <td><%= item.description %></td>
    <td><%= item.cost.format %></td>
    <td><%= item.selling_price.format %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

